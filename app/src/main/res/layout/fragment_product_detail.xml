<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tinystranger.lcbohelper.app.ProductDetailActivity$PlaceholderFragment"
    android:background="@drawable/geometry_repeating">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView" >

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="top|left|bottom|right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="BRICK KILN SHIRAZ 2010"
                android:id="@+id/detailName"
                android:textAlignment="center"
                android:gravity="fill_horizontal"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/detailIconLayout"
                android:layout_below="@id/detailName">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/detailImage"
                    android:minHeight="240dp"
                    android:minWidth="240dp"
                    android:clickable="true" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp">

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/detailIconLayout"
                >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$ 24.95"
                        android:id="@+id/detailPrice"
                        android:layout_alignTop="@+id/textView"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:layout_toRightOf="@+id/textView" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:id="@+id/detailProductNumber"
                    android:textIsSelectable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="750 mL bottle"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:id="@+id/detailVolume" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ontario, Canada"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:id="@+id/detailRegion" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VINTAGES"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:id="@+id/detailStockType" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yumm"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:id="@+id/detailSweetnessDescriptor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sweet"
                    android:paddingTop="1dp"
                    android:id="@+id/detailWineStyle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="1dp"
                    android:id="@+id/detailServingSuggestion" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:id="@+id/detailItemDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Nearby Inventory"
                    android:id="@+id/textView2" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detailStoresLayout"
                    android:layout_marginTop="10dp">

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/storesProgressBar"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_gravity="center_horizontal"
                        android:indeterminate="true" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
